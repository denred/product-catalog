# Port number where the backend server will run
PORT=4000

# Base URL for the backend server (used for links, CORS, etc.)
HOST_URL=http://localhost:${PORT}

# MongoDB connection string (replace with production connection details)
MONGO_URI=mongodb://mongo:27017/product-catalog

# Secret key used to sign and verify JWT tokens (replace before deployment)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name
